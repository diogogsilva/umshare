extends layout

block content
  body.w3-container
    .w3-center
        img.w3-circle.w3-margin-top.w3-center(src='/images/logo.png' alt='Logo' style='width:10%')
    .w3-container
        .w3-section
            label
            b Email
            input.w3-input.w3-border.w3-hover-border-black.w3-margin-bottom(type='text' placeholder='Enter Email')
            label
            b Password
            input.w3-input.w3-border.w3-hover-border-black.w3-margin-bottom(type='password' placeholder='Enter Password')
            label
            b Confirm Password
            input.w3-input.w3-border.w3-hover-border-black(type='password' placeholder='Confirm Password')
            //input.w3-check(type='checkbox' checked='checked')
            //|  Remember me
        .w3-container.w3-border-top.w3-padding-16.w3-light-grey
            a.w3-btn.w3-green(href="http://localhost:2222/feed") Create
            span.w3-right.w3-padding.w3-hide-small
                | Already have an account? 
                a(href='http://localhost:2222/') Back to Login

